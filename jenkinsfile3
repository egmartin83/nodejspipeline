pipeline {
    agent {label 'jenkins-agent'}
    stages {
        stage('build') {
            agent {
                docker {
                // Set both label and image
                label 'jenkins-agent''
                //image 'node:7-alpine'
                args '--name docker' // list any args
                }
            }
            steps {
  
                // Get some code from a GitHub repository
                git url: 'https://github.com/egmartin83/nodejspipeline.git', branch: 'main'
                sh 'ls -l'
                sh 'hostname'
                sh 'docker --version'
     
            //            sh 'docker build -t nodejsapp:latest .'
                    
                
            }
        }
    }
}
