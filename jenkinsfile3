pipeline {
    agent {label 'jenkins-agent' }
    stages {
        stage('Initialize') {
            steps {
                script {
                    def dockerHome = tool 'docker-inst'
                    env.PATH = "${dockerHome}/bin:${env.PATH}"
                }
            }
        }
        stage('build') {
            steps {
                git 'https://github.com/egmartin83/nodejspipeline.git'
                sh 'docker --version'
                sh 'docker build -t appNodeJS:latest .'
            }
        }
    }
}
